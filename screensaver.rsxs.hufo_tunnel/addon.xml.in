<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="screensaver.rsxs.hufo_tunnel"
  version="3.0.0"
  name="Hufo Tunnel"
  provider-name="Team Kodi">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="xbmc.ui.screensaver"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Tunnel saver</summary>
    <description lang="en">From Jeremie Allard:
"A rewrited version of my first OpenGL Challenge entry. Something like a rebirth :) After too much month of not participing to this challenge I've done this little entry just to thanks Otry and BlackOrb for this great new website."</description>
    <disclaimer lang="en">This is an implementation based on "rss-glx" screensaver</disclaimer>
    <platform>@PLATFORM@</platform>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
      <screenshot>resources/screenshot-01.jpg</screenshot>
      <screenshot>resources/screenshot-02.jpg</screenshot>
      <screenshot>resources/screenshot-03.jpg</screenshot>
    </assets>
  </extension>
</addon>
