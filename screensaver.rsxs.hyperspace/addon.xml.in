<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="screensaver.rsxs.hyperspace"
  version="3.0.0"
  name="Hyperspace"
  provider-name="Team Kodi">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="xbmc.ui.screensaver"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Flying through hyper space</summary>
    <description lang="en">Cruise through the far reaches of space really, really fast. Fly between the stars, across oozing cosmic planes, and through endless shimmering tunnels. ...really fast.</description>
    <disclaimer lang="en">This is an implementation based on "rss-glx" screensaver</disclaimer>
    <platform>@PLATFORM@</platform>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
      <screenshot>resources/screenshot-01.jpg</screenshot>
      <screenshot>resources/screenshot-02.jpg</screenshot>
      <screenshot>resources/screenshot-03.jpg</screenshot>
      <screenshot>resources/screenshot-04.jpg</screenshot>
    </assets>
  </extension>
</addon>
