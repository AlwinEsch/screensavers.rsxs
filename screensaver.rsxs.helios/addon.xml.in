<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="screensaver.rsxs.helios"
  version="3.0.0"
  name="Helios"
  provider-name="Team Kodi">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="xbmc.ui.screensaver"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Attraction/repulsion particle effects and some smooth surfaces</summary>
    <description lang="en">Throw together some attraction/repulsion particle effects and some smooth implicit surfaces and this is what you get.</description>
    <disclaimer lang="en">This is an implementation based on "rss-glx" screensaver</disclaimer>
    <platform>@PLATFORM@</platform>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
      <screenshot>resources/screenshot-01.jpg</screenshot>
      <screenshot>resources/screenshot-02.jpg</screenshot>
      <screenshot>resources/screenshot-03.jpg</screenshot>
      <screenshot>resources/screenshot-04.jpg</screenshot>
    </assets>
  </extension>
</addon>
